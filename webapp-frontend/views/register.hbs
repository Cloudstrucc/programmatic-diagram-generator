<section class="hero" style="min-height: 100vh; display: flex; align-items: center; padding: 60px 0;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow" style="border: 2px solid #f0f0f0; border-radius: 15px;">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="bi bi-person-plus-fill" style="font-size: 4rem; color: var(--secondary-color);"></i>
                            </div>
                            <h2 class="mb-2">Create Your Account</h2>
                            <p class="text-muted">Start generating diagrams in seconds</p>
                        </div>

                        {{#if errors}}
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                {{#each errors}}
                                <li>{{this.msg}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        {{/if}}

                        <form action="/auth/register" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input 
                                    type="text" 
                                    class="form-control form-control-lg" 
                                    id="name" 
                                    name="name" 
                                    placeholder="John Doe"
                                    value="{{name}}"
                                    required
                                >
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input 
                                    type="email" 
                                    class="form-control form-control-lg" 
                                    id="email" 
                                    name="email" 
                                    placeholder="john@example.com"
                                    value="{{email}}"
                                    required
                                >
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input 
                                    type="password" 
                                    class="form-control form-control-lg" 
                                    id="password" 
                                    name="password" 
                                    placeholder="Minimum 6 characters"
                                    required
                                >
                                <small class="text-muted">Must be at least 6 characters</small>
                            </div>

                            <div class="mb-3">
                                <label for="password2" class="form-label">Confirm Password</label>
                                <input 
                                    type="password" 
                                    class="form-control form-control-lg" 
                                    id="password2" 
                                    name="password2" 
                                    placeholder="Re-enter your password"
                                    required
                                >
                            </div>

                            <div class="mb-4 form-check">
                                <input type="checkbox" class="form-check-input" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="/terms" style="color: var(--secondary-color);">Terms of Service</a> 
                                    and <a href="/privacy" style="color: var(--secondary-color);">Privacy Policy</a>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 btn-lg" style="background: var(--secondary-color); border: none; border-radius: 4px;">
                                Create Account
                            </button>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="text-muted mb-2">
                                <i class="bi bi-check-circle me-2" style="color: var(--success-color);"></i>
                                Start with 10 free diagrams/day
                            </p>
                            <p class="text-muted mb-0">
                                Already have an account? 
                                <a href="/auth/login" style="color: var(--secondary-color); text-decoration: none; font-weight: 600;">
                                    Sign In
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

                <p class="text-center mt-4 text-muted">
                    <a href="/" style="color: var(--text-color); text-decoration: none;">
                        <i class="bi bi-arrow-left me-2"></i>Back to Home
                    </a>
                </p>
            </div>
        </div>
    </div>
</section>
