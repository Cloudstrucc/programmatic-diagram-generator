<section style="background: var(--light-bg); padding: 60px 0 80px;">
    <div class="container">
        <!-- TEMPORARY DEBUG INFO - Remove after fixing -->
        <div class="alert alert-warning mb-3">
            <strong>üêõ Debug Info (Remove this after testing):</strong><br>
            <code>drawioXml exists: {{#if diagram.drawioXml}}YES ({{diagram.drawioXml.length}} chars){{else}}NO{{/if}}</code><br>
            <code>diagramFormat: {{diagram.diagramFormat}}</code><br>
            <code>imageData exists: {{#if diagram.imageData}}YES{{else}}NO{{/if}}</code><br>
            <code>status: {{diagram.status}}</code>
        </div>

        <div class="row mb-4">
            <div class="col-md-8">
                <h1>{{diagram.title}}</h1>
                <p class="text-muted">{{diagram.prompt}}</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a href="/diagrams/my-diagrams" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to My Diagrams
                </a>
            </div>
        </div>

       <!-- Download Buttons -->
        {{#if (eq diagram.status 'completed')}}
        <div class="row mb-3">
            <div class="col-12">
                <div class="btn-group" role="group">
                    {{#if diagram.imageData}}
                    <button class="btn btn-primary" onclick="downloadPNG()">
                        <i class="bi bi-download me-2"></i>Download PNG
                    </button>
                    <button class="btn btn-outline-primary" onclick="convertToSVG()">
                        <i class="bi bi-download me-2"></i>Download SVG
                    </button>
                    {{/if}}
                    
                    {{!-- Draw.io buttons - Show if drawioXml exists --}}
                    {{#if diagram.drawioXml}}
                        <button class="btn btn-success" onclick="openInDrawio()" 
                                title="Open directly in Draw.io - no download needed!">
                            <i class="bi bi-box-arrow-up-right me-2"></i>Open in Draw.io
                        </button>
                        <button class="btn btn-outline-success" onclick="downloadDrawIOFile()"
                                title="Download .drawio file to save locally">
                            <i class="bi bi-download me-2"></i>Download .drawio
                        </button>
                    {{else}}
                        <!-- DEBUG: Show why buttons aren't appearing -->
                        <button class="btn btn-secondary" disabled>
                            <i class="bi bi-x-circle me-2"></i>Draw.io: No XML Data
                        </button>
                    {{/if}}
                </div>
                
                <!-- TEMPORARY DEBUG BUTTON -->
                <button class="btn btn-warning btn-sm mt-2" onclick="testDrawioData()">
                    üêõ Test Draw.io Data (Remove after testing)
                </button>
                
                {{#if diagram.drawioXml}}
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-info-circle me-1"></i>
                    "Open in Draw.io" opens directly in your browser - no download needed!
                </small>
                {{else}}
                <small class="text-danger d-block mt-2">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Draw.io XML not available for this diagram. Try regenerating with a newer version.
                </small>
                {{/if}}
            </div>
        </div>
        {{/if}}

        <div class="row">
            <div class="col-lg-9">
                <div class="card" style="border: 2px solid #f0f0f0; border-radius: 10px;">
                    <div class="card-body p-4">
                        {{#if (eq diagram.status 'completed')}}
                            {{#if diagram.imageData}}
                            <img id="diagramImage" src="data:image/png;base64,{{diagram.imageData}}" class="img-fluid rounded" alt="{{diagram.title}}" style="max-width: 100%;">
                            {{else if diagram.xmlData}}
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                This is a Draw.io XML diagram. Download it and open in Draw.io to view.
                            </div>
                            <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow: auto;"><code>{{diagram.xmlData}}</code></pre>
                            {{/if}}
                        {{else if (eq diagram.status 'generating')}}
                        <div class="alert alert-warning">
                            <div class="d-flex align-items-center">
                                <div class="spinner-border spinner-border-sm me-3"></div>
                                <div>This diagram is still being generated. Please refresh the page in a moment.</div>
                            </div>
                        </div>
                        {{else}}
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Failed to generate diagram. Error: {{diagram.error}}
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card" style="border: 2px solid #f0f0f0; border-radius: 10px;">
                    <div class="card-body">
                        <h5>Details</h5>
                        <hr>
                        <p><strong>Type:</strong> {{diagram.diagramType}}</p>
                        {{#if diagram.diagramFormat}}
                        <p><strong>Format:</strong> 
                            {{#if (eq diagram.diagramFormat 'graphviz')}}
                            <span class="badge bg-primary">Cloud Architecture</span>
                            {{else if (eq diagram.diagramFormat 'graphviz-dot')}}
                            <span class="badge bg-success">Traditional Diagram</span>
                            {{else if (eq diagram.diagramFormat 'drawio-native')}}
                            <span class="badge bg-info">Draw.io Native</span>
                            {{else}}
                            {{diagram.diagramFormat}}
                            {{/if}}
                        </p>
                        {{/if}}
                        <p><strong>Style:</strong> {{diagram.style}}</p>
                        <p><strong>Quality:</strong> {{diagram.quality}}</p>
                        <p><strong>Status:</strong> 
                            {{#if (eq diagram.status 'completed')}}
                            <span class="badge bg-success">Completed</span>
                            {{else if (eq diagram.status 'generating')}}
                            <span class="badge bg-warning">Generating</span>
                            {{else}}
                            <span class="badge bg-danger">Failed</span>
                            {{/if}}
                        </p>
                        <p><strong>Created:</strong> {{formatDate diagram.createdAt}}</p>
                        
                        {{!-- Draw.io Export Status --}}
                        <div class="mt-3 p-2 rounded" style="background-color: #f8f9fa;">
                            <small class="text-muted d-block mb-1"><strong>Export Options:</strong></small>
                            <small>
                                {{#if diagram.drawioXml}}
                                <i class="bi bi-check-circle text-success me-1"></i>Draw.io: Available
                                {{else}}
                                <i class="bi bi-x-circle text-danger me-1"></i>Draw.io: Not Available
                                {{/if}}
                            </small>
                        </div>
                        
                        {{#if diagram.favorite}}
                        <button class="btn btn-sm btn-outline-warning w-100 mt-3" onclick="toggleFavorite()">
                            <i class="bi bi-star-fill me-2"></i>Unfavorite
                        </button>
                        {{else}}
                        <button class="btn btn-sm btn-outline-warning w-100 mt-3" onclick="toggleFavorite()">
                            <i class="bi bi-star me-2"></i>Favorite
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
const diagramFormat = '{{diagram.diagramFormat}}';
const drawioXml = `{{{diagram.drawioXml}}}`;

// COMPREHENSIVE DEBUG LOGGING
console.log('=== DRAW.IO DEBUG INFO ===');
console.log('Diagram ID:', '{{diagram._id}}');
console.log('diagramFormat:', diagramFormat);
console.log('drawioXml exists:', !!drawioXml);
console.log('drawioXml length:', drawioXml ? drawioXml.length : 0);
console.log('drawioXml is empty string:', drawioXml === '');
console.log('drawioXml preview (first 200 chars):', drawioXml ? drawioXml.substring(0, 200) : 'NONE');
console.log('imageData exists:', '{{#if diagram.imageData}}YES{{else}}NO{{/if}}');
console.log('=========================');

// DEBUG FUNCTION - Shows alert with data
function testDrawioData() {
    const info = `
üêõ Draw.io Data Test
====================
Exists: ${!!drawioXml}
Length: ${drawioXml ? drawioXml.length : 0}
Is Empty String: ${drawioXml === ''}
Type: ${typeof drawioXml}

First 300 characters:
${drawioXml ? drawioXml.substring(0, 300) : 'NO DATA'}

Check browser console (F12) for full details.
    `;
    alert(info);
    console.log('Full drawioXml content:', drawioXml);
}

// Download PNG
function downloadPNG() {
    const imageData = '{{diagram.imageData}}';
    if (!imageData) {
        alert('No image data available');
        return;
    }
    const link = document.createElement('a');
    link.href = 'data:image/png;base64,' + imageData;
    link.download = '{{diagram.title}}.png';
    link.click();
}

// Convert to SVG and download
function convertToSVG() {
    const imageData = '{{diagram.imageData}}';
    if (!imageData) {
        alert('No image data available');
        return;
    }
    const img = document.getElementById('diagramImage');
    const width = img.naturalWidth || 1200;
    const height = img.naturalHeight || 800;
    
    const svg = `<?xml version="1.0" encoding="UTF-8"?>
<svg width="${width}" height="${height}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <image width="${width}" height="${height}" xlink:href="data:image/png;base64,${imageData}"/>
</svg>`;
    
    const blob = new Blob([svg], { type: 'image/svg+xml' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = '{{diagram.title}}.svg';
    link.click();
}

// Open directly in Draw.io
function openInDrawio() {
    console.log('üöÄ openInDrawio() called');
    console.log('drawioXml length:', drawioXml ? drawioXml.length : 0);
    
    if (!drawioXml || drawioXml.trim() === '') {
        alert('Draw.io XML not available for this diagram.\n\nThis diagram was generated without Draw.io XML data. Please regenerate the diagram to get Draw.io export capability.');
        console.error('‚ùå No Draw.io XML data available');
        return;
    }
    
    try {
        console.log('‚úÖ Encoding XML to base64...');
        // Encode the XML data as base64
        const base64Data = btoa(unescape(encodeURIComponent(drawioXml)));
        console.log('‚úÖ Base64 encoded, length:', base64Data.length);
        
        // Open Draw.io with the diagram data embedded
        const drawioUrl = `https://app.diagrams.net/#R${base64Data}`;
        console.log('‚úÖ Opening Draw.io URL...');
        
        // Open in new tab
        window.open(drawioUrl, '_blank');
        console.log('‚úÖ Draw.io opened successfully');
    } catch (error) {
        console.error('‚ùå Error opening in Draw.io:', error);
        alert('Error opening in Draw.io: ' + error.message + '\n\nTry downloading the file instead.');
    }
}

// Download .drawio file
function downloadDrawIOFile() {
    console.log('üì• downloadDrawIOFile() called');
    
    if (!drawioXml || drawioXml.trim() === '') {
        alert('Draw.io XML not available for this diagram');
        console.error('‚ùå No Draw.io XML data available');
        return;
    }
    
    try {
        const title = '{{diagram.title}}';
        const blob = new Blob([drawioXml], { type: 'application/xml' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = title + '.drawio';
        link.click();
        console.log('‚úÖ Draw.io file downloaded:', title + '.drawio');
    } catch (error) {
        console.error('‚ùå Error downloading Draw.io file:', error);
        alert('Error downloading file: ' + error.message);
    }
}

// Toggle favorite
function toggleFavorite() {
    fetch('/diagrams/{{diagram._id}}/favorite', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    })
    .catch(error => console.error('Error:', error));
}
</script>
